<p id="notice"><%= notice %></p>
<div class="col-md-6 p-lg-8 mx-auto my-5" style="width: 750px; height: 1000px;">
  <main class="form-signin w-100 m-auto">
    <h1 style="text-align: center">Cita</h1>

    <table class="table table-striped">
      <thead>
      <tr>
        <th>Id paciente</th>
        <th>Nombre paciente</th>
        <th>Id doctor</th>
        <th>Nombre doctor</th>
        <th>Consultorio</th>
        <th>Fecha hora</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @cita.each do |cita| %>
        <tr>
          <td><%= cita.id_paciente %></td>
          <td><%= cita.nombre_paciente %></td>
          <td><%= cita.id_doctor %></td>
          <td><%= cita.nombre_doctor %></td>
          <td><%= cita.consultorio %></td>
          <td><%= cita.fecha_hora %></td>
          <td><%= link_to 'Show', cita %></td>
          <td><%= link_to 'Edit', edit_cita_path(cita) %></td>
          <td><%= link_to 'Destroy', cita, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to 'New Cita', new_cita_path %>
  </main>
</div>
